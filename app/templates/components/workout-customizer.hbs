<!--            <option value="Наклоны вперед">Наклоны вперед</option>-->
        </select>
        <div style="margin-top: 12px" class="text-field text-field_floating-2">
            {{input class="text-field__input repet" value=repet placeholder="1"}}
            <label class="text-field__label" for="repet">Повторения:</label>
        </div>
<!--        <label for=""></label>-->
<!--        <input type="number" id="repet">-->
        <div class="button" onclick={{action 'addExercise'}}>Добавить</div>
        
        <div>
            <h2>План</h2>
            <ul id="exercise-list"></ul>
        </div>
