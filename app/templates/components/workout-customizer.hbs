<div class="info-form">
    <h1 for="info-form">Настройки тренировки</h1>
    <form {{action 'start' on='submit'}}>
        <h2>Добавить упражнение</h2>
        <label class="text-field__label" for="exercise">Упражнение:</label>
        <select id="exercise">
        {{#each workoutList as |item|}}
            <option value={{item.name}}>{{item.name}}</option>
        {{/each}}
<!--            <option value="Приседания">Приседания</option>-->
<!--            <option value="Отжимания">Отжимания</option>-->
